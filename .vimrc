""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" RUNNING CURRENT FILE
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
function! RunCurrent(...)
  write
  
  let file = expand("%")

  if file =~# ".sh$"
    !bash %
  elseif file =~# ".py$"
    !python %
  elseif file =~# ".go$"
    !go run *.go
  else
    !./%
  end
endfunction

map <f8> :call RunCurrent()<cr>

